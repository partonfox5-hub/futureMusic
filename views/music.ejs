<%- include('partials/header') %>

<section class="max-w-7xl mx-auto py-12">
    <h2 class="text-4xl md:text-6xl text-center mb-16 text-gold">DISCOGRAPHY</h2>
    
    <!-- Featured Album (Kept Static as requested, or can be made dynamic later) -->
    <div class="flex flex-col md:flex-row items-center gap-12 mb-20 glass-card p-8 rounded-xl">
        <div class="w-full md:w-1/2 aspect-square bg-gradient-to-br from-gray-800 to-black relative group overflow-hidden border-2 border-[#D4AF37] rounded-lg shadow-2xl">
            <!-- Placeholder for Album Art -->
            <div class="absolute inset-0 flex items-center justify-center">
                 <svg width="150" height="150" viewBox="0 0 100 100">
                     <circle cx="50" cy="50" r="45" stroke="#D4AF37" stroke-width="2" fill="none"/>
                     <path d="M35 30 L75 50 L35 70 Z" fill="#D4AF37"/>
                 </svg>
            </div>
            <div class="absolute inset-0 bg-black/60 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <button class="text-white text-6xl hover:scale-110 transition-transform"><i class="fas fa-play-circle"></i></button>
            </div>
        </div>
        <div class="w-full md:w-1/2 space-y-6">
            <span class="text-[#20B2AA] tracking-widest text-sm font-bold uppercase">Latest Release</span>
            <h3 class="text-5xl font-bold font-serif text-white">THE CAPTAIN'S ORDERS</h3>
            <p class="text-gray-400 leading-relaxed">
                A symphonic blend of psychedelic rock and orchestral grandeur. Featuring the hit singles "Eye of the Storm" and "Uniformed Chaos".
            </p>
            <div class="space-y-3 pt-4">
                <div class="flex items-center justify-between border-b border-gray-700 pb-2 hover:bg-white/5 px-2 transition-colors cursor-pointer">
                    <span class="text-gray-300">01. Initiation</span>
                    <span class="text-gray-500">3:42</span>
                </div>
                <div class="flex items-center justify-between border-b border-gray-700 pb-2 hover:bg-white/5 px-2 transition-colors cursor-pointer">
                    <span class="text-[#D4AF37] font-bold">02. The Decree (Focus Track)</span>
                    <span class="text-[#D4AF37]">4:15</span>
                </div>
                <div class="flex items-center justify-between border-b border-gray-700 pb-2 hover:bg-white/5 px-2 transition-colors cursor-pointer">
                    <span class="text-gray-300">03. Dove's Flight</span>
                    <span class="text-gray-500">2:58</span>
                </div>
            </div>
            <div class="pt-6 flex gap-4">
                <button class="bg-[#1DB954] text-black px-6 py-2 rounded-full font-bold hover:bg-[#1ed760] transition-colors flex items-center gap-2">
                    <i class="fab fa-spotify"></i> Spotify
                </button>
                <button class="bg-black border border-white text-white px-6 py-2 rounded-full font-bold hover:bg-white hover:text-black transition-colors flex items-center gap-2">
                    <i class="fab fa-apple"></i> Apple Music
                </button>
            </div>
        </div>
    </div>

    <!-- Divider -->
    <div class="flex items-center justify-center mb-16">
        <div class="h-px bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent w-full max-w-2xl"></div>
    </div>

    <h3 class="text-3xl md:text-4xl text-center mb-10 text-white font-serif">Complete Collection</h3>

    <!-- Dynamic Song Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% songs.forEach(function(song) { %>
            <div class="glass-card flex flex-col h-full rounded-xl overflow-hidden group hover:border-[#D4AF37]/50 transition-colors duration-300 border border-white/10">
                
                <!-- Card Image Area -->
                <div class="relative w-full aspect-video bg-gray-900 overflow-hidden">
                    <% if (song.youtube_info && song.youtube_info.video_id) { %>
                        <!-- YouTube Thumbnail -->
                        <img 
                            src="https://img.youtube.com/vi/<%= song.youtube_info.video_id %>/hqdefault.jpg" 
                            alt="<%= song.name %> thumbnail" 
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                        >
                        <!-- Play Overlay -->
                        <a href="<%= song.youtube_info.video_url %>" target="_blank" class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <i class="fab fa-youtube text-red-600 text-5xl drop-shadow-lg"></i>
                        </a>
                    <% } else { %>
                        <!-- Fallback SVG for songs without YouTube video -->
                        <div class="w-full h-full flex items-center justify-center bg-gradient-to-b from-gray-800 to-gray-900">
                            <i class="fas fa-music text-gray-700 text-6xl group-hover:text-[#D4AF37] transition-colors duration-300"></i>
                        </div>
                    <% } %>
                </div>

                <!-- Card Content -->
                <div class="p-6 flex flex-col flex-grow">
                    <h4 class="text-xl font-bold text-white mb-2 line-clamp-2 min-h-[3.5rem]"><%= song.name %></h4>
                    
                    <% if (song.album) { %>
                        <p class="text-sm text-[#D4AF37] mb-4 font-medium tracking-wider uppercase"><%= song.album %></p>
                    <% } else { %>
                        <p class="text-sm text-gray-500 mb-4 font-medium tracking-wider uppercase">Single</p>
                    <% } %>

                    <!-- Description (Optional, clamped) -->
                    <% if (song.youtube_info && song.youtube_info.description) { %>
                        <p class="text-gray-400 text-sm line-clamp-2 mb-6 flex-grow">
                            <%= song.youtube_info.description %>
                        </p>
                    <% } else { %>
                        <div class="flex-grow"></div> <!-- Spacer if no description -->
                    <% } %>

                    <!-- Action Area -->
                    <div class="mt-auto space-y-4">
                        <!-- Links Row -->
                        <div class="flex gap-3 justify-center">
                            <% if (song.spotify_link) { %>
                                <a href="<%= song.spotify_link %>" target="_blank" class="flex-1 bg-[#1DB954]/10 border border-[#1DB954]/50 text-[#1DB954] hover:bg-[#1DB954] hover:text-white py-2 rounded-lg text-center transition-all duration-300 flex items-center justify-center gap-2">
                                    <i class="fab fa-spotify"></i> <span class="text-sm font-bold">Spotify</span>
                                </a>
                            <% } %>
                            <% if (song.youtube_info) { %>
                                <a href="<%= song.youtube_info.video_url %>" target="_blank" class="flex-1 bg-[#FF0000]/10 border border-[#FF0000]/50 text-[#FF0000] hover:bg-[#FF0000] hover:text-white py-2 rounded-lg text-center transition-all duration-300 flex items-center justify-center gap-2">
                                    <i class="fab fa-youtube"></i> <span class="text-sm font-bold">Watch</span>
                                </a>
                            <% } %>
                        </div>

                        <!-- Add to Downloads Button -->
                        <button class="w-full bg-white text-black font-bold py-3 rounded-lg hover:bg-[#D4AF37] transition-colors duration-300 flex items-center justify-center gap-2 shadow-lg add-to-cart-btn" data-song-id="<%= song.spotify_id || song.youtube_info?.video_id %>">
                            <i class="fas fa-cart-plus"></i> Add to Downloads
                        </button>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<%- include('partials/footer') %>