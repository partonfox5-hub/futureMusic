<%- include('partials/header') %>

<!-- NEW: Full-Screen Featured Releases Pyramid Layout -->
<section class="min-h-screen w-full flex flex-col items-center justify-center bg-black py-12 px-4 relative overflow-hidden">
    <h2 class="text-4xl md:text-6xl text-center mb-16 text-gold brand-font z-20">LATEST TRANSMISSION</h2>

    <div class="relative w-full max-w-7xl h-[60vh] md:h-[70vh]">
        
        <!-- 1. The Final Scene (TOP/APEX) -->
        <!-- Link points to specific song ID -->
        <a href="/song/Cem7RZsb7Rw" class="absolute left-1/2 -translate-x-1/2 top-0 w-[80%] max-w-md featured-card z-30 group" style="transition: transform 0.5s;">
            <div class="glass-card p-4 rounded-xl border-4 border-[#F4C430] hover:border-[#D4AF37] transition-all duration-300 shadow-2xl">
                <div class="relative aspect-square">
                    <img 
                        src="https://img.youtube.com/vi/Cem7RZsb7Rw/hqdefault.jpg" 
                        alt="The Final Scene thumbnail" 
                        class="w-full h-full object-cover rounded-lg group-hover:scale-[1.02] transition-transform duration-500"
                    >
                    <div class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <i class="fas fa-play text-white text-6xl drop-shadow-lg"></i>
                    </div>
                </div>
                <div class="mt-4 text-center">
                    <p class="text-2xl font-black text-white brand-font">THE FINAL SCENE</p>
                    <p class="text-sm text-[#D4AF37] uppercase tracking-widest">APEX</p>
                </div>
            </div>
        </a>

        <!-- 2. Mission Assignment (BOTTOM LEFT) -->
        <a href="/song/CTNTYm3llds" class="absolute left-[10%] bottom-0 w-[40%] max-w-[300px] featured-card z-20 group" style="transition: transform 0.5s;">
            <div class="glass-card p-3 rounded-xl border-2 border-white/20 hover:border-[#D4AF37] transition-all duration-300 shadow-xl">
                <div class="relative aspect-square">
                    <img 
                        src="https://img.youtube.com/vi/CTNTYm3llds/hqdefault.jpg" 
                        alt="Mission Assignment thumbnail" 
                        class="w-full h-full object-cover rounded-lg group-hover:scale-[1.05] transition-transform duration-500"
                    >
                    <div class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <i class="fas fa-play text-white text-4xl"></i>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <p class="text-xl font-bold text-white">MISSION ASSIGNMENT</p>
                </div>
            </div>
        </a>

        <!-- 3. Hide and Lie (BOTTOM RIGHT) -->
        <a href="/song/bXgeFfDlmwU" class="absolute right-[10%] bottom-0 w-[40%] max-w-[300px] featured-card z-20 group" style="transition: transform 0.5s;">
            <div class="glass-card p-3 rounded-xl border-2 border-white/20 hover:border-[#D4AF37] transition-all duration-300 shadow-xl">
                <div class="relative aspect-square">
                    <img 
                        src="https://img.youtube.com/vi/bXgeFfDlmwU/hqdefault.jpg" 
                        alt="Hide and Lie thumbnail" 
                        class="w-full h-full object-cover rounded-lg group-hover:scale-[1.05] transition-transform duration-500"
                    >
                    <div class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <i class="fas fa-play text-white text-4xl"></i>
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <p class="text-xl font-bold text-white">HIDE AND LIE</p>
                </div>
            </div>
        </a>

        <!-- Visual Pyramid Effect Lines -->
        <div class="hidden md:block absolute inset-0 pointer-events-none z-10">
             <svg width="100%" height="100%" viewBox="0 0 100 100" preserveAspectRatio="none" class="opacity-10">
                 <line x1="50" y1="5" x2="20" y2="95" stroke="#D4AF37" stroke-width="1" stroke-dasharray="5, 5" />
                 <line x1="50" y1="5" x2="80" y2="95" stroke="#D4AF37" stroke-width="1" stroke-dasharray="5, 5" />
                 <line x1="20" y1="95" x2="80" y2="95" stroke="#D4AF37" stroke-width="1" stroke-dasharray="5, 5" />
             </svg>
        </div>

    </div>
</section>

<section class="max-w-7xl mx-auto py-12">
    <!-- Divider -->
    <div class="flex items-center justify-center mb-16">
        <div class="h-px bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent w-full max-w-2xl"></div>
    </div>

    <h3 class="text-3xl md:text-4xl text-center mb-10 text-white font-serif">Complete Collection</h3>

    <!-- Dynamic Song Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% songs.forEach(function(song) { 
            // Logic to get the ID for the link
            const songId = (song.youtube_info && song.youtube_info.video_id) ? song.youtube_info.video_id : song.spotify_id;
        %>
            <div class="glass-card flex flex-col h-full rounded-xl overflow-hidden group hover:border-[#D4AF37]/50 transition-colors duration-300 border border-white/10">
                
                <!-- Card Image Area (Clickable Link) -->
                <a href="/song/<%= songId %>" class="relative w-full aspect-video bg-gray-900 overflow-hidden block">
                    <% if (song.youtube_info && song.youtube_info.video_id) { %>
                        <!-- YouTube Thumbnail -->
                        <img 
                            src="https://img.youtube.com/vi/<%= song.youtube_info.video_id %>/hqdefault.jpg" 
                            alt="<%= song.name %> thumbnail" 
                            class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                        >
                        <!-- Play Overlay -->
                        <div class="absolute inset-0 bg-black/50 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                            <i class="fas fa-expand text-white text-5xl drop-shadow-lg"></i>
                        </div>
                    <% } else { %>
                        <!-- Fallback SVG for songs without YouTube video -->
                        <div class="w-full h-full flex items-center justify-center bg-gradient-to-b from-gray-800 to-gray-900">
                            <i class="fas fa-music text-gray-700 text-6xl group-hover:text-[#D4AF37] transition-colors duration-300"></i>
                        </div>
                    <% } %>
                </a>

                <!-- Card Content -->
                <div class="p-6 flex flex-col flex-grow">
                    <!-- Title Link -->
                    <a href="/song/<%= songId %>" class="hover:text-[#D4AF37] transition-colors">
                        <h4 class="text-xl font-bold text-white mb-2 line-clamp-2 min-h-[3.5rem]"><%= song.name %></h4>
                    </a>
                    
                    <% if (song.album) { %>
                        <p class="text-sm text-[#D4AF37] mb-4 font-medium tracking-wider uppercase"><%= song.album %></p>
                    <% } else { %>
                        <p class="text-sm text-gray-500 mb-4 font-medium tracking-wider uppercase">Single</p>
                    <% } %>

                    <!-- Description (Optional, clamped) -->
                    <% if (song.youtube_info && song.youtube_info.description) { %>
                        <p class="text-gray-400 text-sm line-clamp-2 mb-6 flex-grow">
                            <%= song.youtube_info.description %>
                        </p>
                    <% } else { %>
                        <div class="flex-grow"></div>
                    <% } %>

                    <!-- Action Area -->
                    <div class="mt-auto space-y-4">
                        <!-- New View Details Button (Primary Action) -->
                        <a href="/song/<%= songId %>" class="block w-full text-center border border-[#D4AF37] text-[#D4AF37] hover:bg-[#D4AF37] hover:text-black font-bold py-2 rounded-lg transition-all duration-300 uppercase tracking-wider text-sm">
                            View Transmission
                        </a>

                        <!-- Add to Downloads Button -->
                        <button class="w-full bg-white text-black font-bold py-3 rounded-lg hover:bg-[#D4AF37] transition-colors duration-300 flex items-center justify-center gap-2 shadow-lg add-to-cart-btn" data-song-id="<%= songId %>">
                            <i class="fas fa-cart-plus"></i> Add to Downloads
                        </button>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<%- include('partials/footer') %>