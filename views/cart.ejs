<%- include('partials/header') %>

<section class="max-w-4xl mx-auto py-12 px-4 min-h-[60vh]">
    <h1 class="text-4xl text-gold brand-font mb-8 border-b border-gray-800 pb-4">Current Manifest</h1>

    <div id="cart-container" class="space-y-4">
        <!-- Cart Items Injected Here via JS -->
        <p class="text-gray-500 text-center py-12">Your manifest is empty.</p>
    </div>

    <!-- Summary -->
    <div id="cart-summary" class="mt-12 p-6 glass-card rounded border border-gray-700 hidden">
        <div class="flex justify-between items-center mb-6">
            <span class="text-xl text-gray-300">Total</span>
            <span id="cart-total" class="text-3xl text-[#D4AF37] font-bold">$0.00</span>
        </div>
        <button id="checkout-btn" class="w-full btn-gold py-4 text-xl">
            INITIATE TRANSFER via STRIPE
        </button>
    </div>
</section>

<script src="/js/store.js"></script>
<script>
    // Render Cart on Load
    document.addEventListener('DOMContentLoaded', () => {
        window.renderCartPage();
    });
</script>

<%- include('partials/footer') %>