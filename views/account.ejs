<!-- <%- include('partials/header') %> -->

<div class="container mx-auto px-4 py-8 relative z-10 min-h-screen">
    
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row justify-between items-end mb-12 border-b border-yellow-700/30 pb-6">
        <div>
            <h1 class="text-4xl md:text-5xl text-gold mb-2">Command Center</h1>
            <p class="text-gray-400 font-light tracking-wider">Welcome back, Traveler.</p>
        </div>
        <a href="/logout" class="mt-4 md:mt-0 text-xs text-red-400 hover:text-red-300 uppercase tracking-widest border border-red-900/50 px-4 py-2 rounded hover:bg-red-900/20 transition-all inline-block text-center">
            <i class="fas fa-sign-out-alt mr-2"></i>Logout
        </a>

    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Sidebar / Profile Summary -->
        <div class="lg:col-span-1">
            <div class="glass-card p-8 rounded-sm text-center relative overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent opacity-50"></div>
                
                <div class="mb-6">
                    <div class="w-24 h-24 rounded-full bg-black/50 border-2 border-[#D4AF37] mx-auto mb-4 flex items-center justify-center relative group overflow-hidden">
                        <% if (user.avatar_url) { %>
                           <img src="<%= user.avatar_url %>" class="w-full h-full object-cover">
                        <% } else { %>
                           <i class="fas fa-user-astronaut text-4xl text-gray-500 group-hover:text-[#D4AF37] transition-colors"></i>
                        <% } %>
                        <div class="absolute inset-0 bg-black/60 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer">
                            <i class="fas fa-camera text-white"></i>
                        </div>
                    </div>
                    <h2 class="text-2xl text-white font-bold"><%= user.full_name || 'Anonymous User' %></h2>
                    <p class="text-[#D4AF37] text-sm tracking-wider uppercase"><%= user.email %></p>
                </div>

                <div class="bg-black/40 rounded p-4 mb-6 text-left space-y-3">
                    <div class="flex justify-between border-b border-gray-800 pb-2">
                        <span class="text-gray-500 text-xs uppercase">Frequency</span>
                        <span class="text-gray-300 text-xs font-mono"><%= user.email %></span>
                    </div>
                    <div class="flex justify-between">
                        <span class="text-gray-500 text-xs uppercase">Joined</span>
                        <span class="text-gray-300 text-xs font-mono">
                            <% if (user.created_at) { %>
                                <%= new Date(user.created_at).toLocaleDateString() %>
                            <% } else { %>
                                N/A
                            <% } %>
                        </span>
                    </div>
                </div>

                <!-- Account Actions (Dynamic) -->
                <div class="mt-6 space-y-3">
                    <!-- Default Buttons -->
                    <div id="actionButtons" class="grid grid-cols-2 gap-2">
                        <button onclick="toggleForm('emailForm')" class="text-xs border border-gray-600 hover:border-[#D4AF37] text-gray-400 hover:text-[#D4AF37] py-2 rounded transition-colors">
                            Set New Email
                        </button>
                        <button onclick="toggleForm('passwordForm')" class="text-xs border border-gray-600 hover:border-[#D4AF37] text-gray-400 hover:text-[#D4AF37] py-2 rounded transition-colors">
                            Reset Password
                        </button>
                    </div>

                    <!-- Email Form (Hidden) -->
                    <form id="emailForm" action="/account/update-email" method="POST" class="hidden bg-black/50 p-3 rounded border border-gray-800">
                        <label class="block text-gray-500 text-[10px] uppercase mb-1">New Email Address</label>
                        <input type="email" name="newEmail" required class="w-full bg-gray-900 border border-gray-700 rounded p-2 text-white text-xs mb-2 focus:border-[#D4AF37] outline-none">
                        <div class="flex gap-2">
                            <button type="submit" class="flex-1 bg-[#D4AF37] text-black text-xs font-bold py-1 rounded">Update</button>
                            <button type="button" onclick="toggleForm('actionButtons')" class="flex-1 bg-gray-800 text-gray-400 text-xs py-1 rounded">Cancel</button>
                        </div>
                    </form>

                    <!-- Password Form (Hidden) -->
                    <form id="passwordForm" action="/account/update-password" method="POST" class="hidden bg-black/50 p-3 rounded border border-gray-800">
                        <label class="block text-gray-500 text-[10px] uppercase mb-1">Current Password</label>
                        <input type="password" name="currentPassword" required class="w-full bg-gray-900 border border-gray-700 rounded p-2 text-white text-xs mb-2 focus:border-[#D4AF37] outline-none">
                        
                        <label class="block text-gray-500 text-[10px] uppercase mb-1">New Password</label>
                        <input type="password" name="newPassword" required class="w-full bg-gray-900 border border-gray-700 rounded p-2 text-white text-xs mb-2 focus:border-[#D4AF37] outline-none">
                        
                        <div class="flex gap-2">
                            <button type="submit" class="flex-1 bg-[#D4AF37] text-black text-xs font-bold py-1 rounded">Update</button>
                            <button type="button" onclick="toggleForm('actionButtons')" class="flex-1 bg-gray-800 text-gray-400 text-xs py-1 rounded">Cancel</button>
                        </div>
                    </form>

                    <!-- Private Bio Field -->
                    <div class="mt-6 pt-6 border-t border-gray-800 text-left">
                        <label class="text-[#D4AF37] text-xs uppercase tracking-widest font-bold mb-2 block">Private Link</label>
                        
                        <% if (user.private_message) { %>
                            <!-- LOCKED STATE -->
                            <textarea disabled class="w-full bg-black/80 border border-gray-900 rounded p-3 text-sm text-gray-500 cursor-not-allowed h-32 resize-none"><%= user.private_message %></textarea>
                            <button disabled class="w-full mt-2 bg-gray-900 text-gray-600 text-xs py-2 rounded cursor-not-allowed">
                                Message Transmitted (Locked)
                            </button>
                        <% } else { %>
                            <!-- ACTIVE STATE -->
                            <form action="/account/message" method="POST">
                                <textarea 
                                    name="message"
                                    required
                                    class="w-full bg-black/50 border border-gray-800 rounded p-3 text-sm text-gray-300 focus:border-[#D4AF37] outline-none h-32 resize-none"
                                    placeholder="Communicate directly with the sovereign now that you have demonstrated your loyalty..."></textarea>
                                <button type="submit" class="w-full mt-2 bg-[#D4AF37]/10 hover:bg-[#D4AF37]/20 text-[#D4AF37] text-xs py-2 rounded transition-colors">
                                    Transmit Message (You only get one.)
                                </button>
                            </form>
                        <% } %>
                    </div>
                </div>

            </div>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-2 space-y-8">
            
            <!-- Digital Assets -->
            <div class="glass-card p-6 rounded-sm">
                <h3 class="text-xl text-gold mb-6 border-b border-gray-800 pb-2 flex items-center gap-3">
                    <i class="fas fa-broadcast-tower text-sm"></i> Digital Assets
                </h3>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <% if (typeof digitalAssets !== 'undefined' && digitalAssets.length > 0) { %>
                        <% digitalAssets.forEach(function(asset) { %>
                            <!-- Dynamic Asset Card -->
                            <div class="glass-card p-4 rounded border border-gray-800 hover:border-[#D4AF37] transition-all group relative overflow-hidden">
                                
                                <!-- Icon/Type Indicator -->
                                <div class="absolute top-2 right-2 text-gray-700 group-hover:text-[#D4AF37] transition-colors">
                                    <i class="fas fa-microchip"></i>
                                </div>
                    
                                <div class="flex flex-col h-full justify-between">
                                    <div>
                                        <h4 class="text-gray-300 font-bold group-hover:text-white truncate">
                                            <%= asset.description ? asset.description.substring(0, 30) + '...' : 'Digital Item' %>
                                        </h4>
<p class="text-xs text-gray-500 mt-1">
    Acquired: <%= asset.created_at ? new Date(asset.created_at).toLocaleDateString() : 'N/A' %>
</p>
                                        <% if(asset.size) { %>
                                            <span class="text-[10px] uppercase tracking-wider bg-gray-900 text-gray-400 px-2 py-1 rounded mt-2 inline-block">
                                                Format: <%= asset.size %>
                                            </span>
                                        <% } %>
                                    </div>
                    
                                    <div class="mt-4 pt-4 border-t border-gray-800 flex justify-between items-center">
                                        <span class="text-[#D4AF37] text-sm"><i class="fas fa-check-circle mr-1"></i> Active</span>
                                        <button class="text-xs bg-[#D4AF37]/10 hover:bg-[#D4AF37]/20 text-[#D4AF37] px-3 py-1 rounded transition-colors">
                                            Access
                                        </button>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <!-- Empty State -->
                        <div class="col-span-full text-center py-8 text-gray-500">
                            <i class="fas fa-wifi mb-2"></i>
                            <p>No digital assets found in your inventory.</p>
                        </div>
                    <% } %>
                </div>
            </div>
            <!-- Game Skins Asset Collection -->
            <div class="glass-card p-6 rounded-sm">
                <h3 class="text-xl text-gold mb-6 border-b border-gray-800 pb-2 flex items-center gap-3">
                    <i class="fas fa-mask text-sm"></i> Owned Skins
                </h3>
                
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                    <% if (typeof gameSkins !== 'undefined' && gameSkins.length > 0) { %>
                        <% gameSkins.forEach(function(skin) { %>
                            <!-- Ornate Skin Card -->
                            <div class="relative bg-black/40 p-3 rounded border transition-transform hover:scale-105" 
                                 style="border-color: <%= skin.frame_color %>; border-width: 2px; box-shadow: 0 0 10px <%= skin.frame_color %>40;">
                                
                                <!-- Canvas for Drawing Skin -->
                                <div class="w-full aspect-square bg-gray-900/50 rounded flex items-center justify-center overflow-hidden mb-2 relative">
                                    <canvas id="skin-canvas-<%= skin.skin_id %>" width="100" height="100"></canvas>
                                    <!-- Ornate Corner Accents (CSS generated) -->
                                    <div class="absolute top-0 left-0 w-2 h-2 border-t-2 border-l-2" style="border-color: <%= skin.frame_color %>"></div>
                                    <div class="absolute top-0 right-0 w-2 h-2 border-t-2 border-r-2" style="border-color: <%= skin.frame_color %>"></div>
                                    <div class="absolute bottom-0 left-0 w-2 h-2 border-b-2 border-l-2" style="border-color: <%= skin.frame_color %>"></div>
                                    <div class="absolute bottom-0 right-0 w-2 h-2 border-b-2 border-r-2" style="border-color: <%= skin.frame_color %>"></div>
                                </div>

                                <div class="text-center">
<h4 class="text-gray-200 font-bold text-xs uppercase tracking-wider truncate"><%= String(skin.skin_id || 'Unknown').replace(/_/g, ' ') %></h4>

                                    <span class="text-[10px] text-gray-500">Asset ID: #<%= skin.id %></span>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-span-full text-center py-8 text-gray-500">
                            <p>No skins found in your collection.</p>
                        </div>
                    <% } %>
                </div>
            </div>
             <!-- Physical Order History -->
             <div class="glass-card p-6 rounded-sm">
                <h3 class="text-xl text-gold mb-6 border-b border-gray-800 pb-2 flex items-center gap-3">
                    <i class="fas fa-box-open text-sm"></i> Order History
                </h3>
                
                <div class="space-y-4">
                    <% if (typeof physicalOrders !== 'undefined' && physicalOrders.length > 0) { %>
                        <% physicalOrders.forEach(function(order) { %>
                            <div class="bg-black/40 border border-gray-800 p-4 rounded flex flex-col md:flex-row justify-between items-center gap-4 hover:border-gray-600 transition-colors">
                                <div class="flex items-start gap-4">
                                    <div class="text-[#D4AF37] pt-1"><i class="fas fa-cube"></i></div>
                                    <div>
                                        <h4 class="text-gray-300 font-bold"><%= order.description || 'Physical Item' %></h4>
                                        <p class="text-xs text-gray-500">
    Order #<%= order.id %> â€¢ <%= order.created_at ? new Date(order.created_at).toLocaleDateString() : 'Date Unknown' %>
</p>
                                        <% if(order.size) { %>
                                            <span class="text-xs text-gray-400 bg-gray-800 px-2 py-0.5 rounded ml-[-2px] mt-1 inline-block">Size: <%= order.size %></span>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="text-right min-w-[100px]">
                                    <span class="block text-[#D4AF37] font-mono">$<%= Number(order.amount).toFixed(2) %></span>
                                    <span class="text-xs text-green-500 uppercase tracking-wider border border-green-900/30 bg-green-900/10 px-2 py-1 rounded mt-1 inline-block">
                                        <%= order.status %>
                                    </span>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="text-center text-gray-500 py-8 border border-dashed border-gray-800 rounded">
                            <i class="fas fa-box mb-2 opacity-50"></i>
                            <p>No physical orders found.</p>
                        </div>
                    <% } %>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- JavaScript for toggling forms -->
<script>
    function toggleForm(activeId) {
        // IDs of all toggleable sections
        const sections = ['actionButtons', 'emailForm', 'passwordForm'];
        
        sections.forEach(id => {
            const el = document.getElementById(id);
            if (id === activeId) {
                el.classList.remove('hidden');
            } else {
                el.classList.add('hidden');
            }
        });
    }
</script>
<script>
    // --- Skin Renderer for Account Page ---
    document.addEventListener("DOMContentLoaded", () => {
        const skinsToRender = document.querySelectorAll('canvas[id^="skin-canvas-"]');
        
        skinsToRender.forEach(canvas => {
            const skinId = canvas.id.replace('skin-canvas-', '');
            const ctx = canvas.getContext('2d');
            
            // Clear and Center
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            ctx.save();
            ctx.translate(canvas.width / 2, canvas.height / 2 + 10); // Center & shift down slightly
            ctx.scale(2, 2); // Zoom in for visibility

            // --- DRAWING LOGIC (Adapted from renderer.js) ---
            // Shared Styling
            ctx.strokeStyle = '#000';
            ctx.lineWidth = 1;

            // Positioning Shifts
            if (['jesus', 'holyman_w', 'dictator', 'angel', 'demon'].includes(skinId)) {
                ctx.translate(0, 10);
            }

            if (skinId === 'neon_punk') {
                ctx.fillStyle = '#2ecc71'; ctx.fillRect(-10, -30, 20, 20);
                ctx.fillStyle = '#2c3e50'; ctx.fillRect(-12, -10, 24, 30);
                ctx.fillStyle = '#e74c3c'; ctx.fillRect(-5, -5, 10, 10);
                ctx.fillStyle = '#000'; ctx.fillRect(-12, 20, 10, 15); ctx.fillRect(2, 20, 10, 15);
            } 
            else if (skinId === 'detective') {
                ctx.fillStyle = '#d35400'; ctx.fillRect(-12, -35, 24, 5);
                ctx.fillRect(-10, -45, 20, 10);
                ctx.fillStyle = '#f1c40f'; ctx.fillRect(-10, -30, 20, 20);
                ctx.fillStyle = '#a0522d'; ctx.fillRect(-14, -10, 28, 40); 
                ctx.fillStyle = '#555'; ctx.fillRect(-12, 30, 10, 5); ctx.fillRect(2, 30, 10, 5);
            } 
            else if (skinId === 'shadow') {
                ctx.fillStyle = '#000'; ctx.globalAlpha = 0.8;
                ctx.beginPath(); ctx.arc(0, -10, 20, 0, Math.PI*2); ctx.fill();
                ctx.fillRect(-10, 10, 20, 20); ctx.globalAlpha = 1.0;
                ctx.fillStyle = '#fff'; ctx.fillRect(-5, -15, 3, 3); ctx.fillRect(2, -15, 3, 3);
            } 
            else if (skinId === 'jesus' || skinId === 'holyman_w') {
                ctx.fillStyle = '#fff'; ctx.fillRect(-10, -30, 20, 30);
                ctx.fillStyle = '#e74c3c'; ctx.beginPath(); ctx.moveTo(-10,-30); ctx.lineTo(10,0); ctx.lineTo(10,-10); ctx.lineTo(-10,-40); ctx.fill();
                ctx.strokeStyle='#f1c40f'; ctx.lineWidth=2; ctx.beginPath(); ctx.arc(0, -45, 10, 0, Math.PI*2); ctx.stroke();
                ctx.fillStyle = '#8d6e63'; ctx.fillRect(-10, -25, 20, 10);
            } 
            else if (skinId === 'panda') {
                ctx.fillStyle = '#fff'; ctx.beginPath(); ctx.arc(0, -25, 12, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#000'; 
                ctx.beginPath(); ctx.arc(-5, -28, 4, 0, Math.PI*2); ctx.fill();
                ctx.beginPath(); ctx.arc(5, -28, 4, 0, Math.PI*2); ctx.fill();
                ctx.beginPath(); ctx.arc(-10, -35, 4, 0, Math.PI*2); ctx.fill();
                ctx.beginPath(); ctx.arc(10, -35, 4, 0, Math.PI*2); ctx.fill();
                ctx.fillRect(-12, -10, 24, 25);
                ctx.fillStyle = '#fff'; ctx.beginPath(); ctx.arc(0, 5, 8, 0, Math.PI*2); ctx.fill();
            }
            else if (skinId === 'dictator') {
                ctx.fillStyle = '#4b5320'; ctx.fillRect(-10, -30, 20, 30);
                ctx.fillStyle = '#000'; ctx.fillRect(-10, -10, 20, 5);
                ctx.fillStyle = '#333'; ctx.fillRect(-8, -45, 16, 10);
                ctx.fillStyle = '#f1c40f'; ctx.fillRect(-2, -35, 4, 4);
            }
            else if (skinId === 'cowboy') {
                ctx.fillStyle = '#ffdbac'; ctx.beginPath(); ctx.arc(0, -25, 9, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#8e44ad'; ctx.fillRect(-10, -10, 20, 25);
                ctx.fillStyle = '#d35400'; ctx.fillRect(-12, -35, 24, 5);
                ctx.fillRect(-8, -45, 16, 10);
                ctx.fillStyle = '#e67e22'; ctx.fillRect(-10, -10, 20, 5);
            }
            else if (skinId === 'walrus') {
                ctx.fillStyle = '#7f8c8d'; ctx.beginPath(); ctx.ellipse(0, -10, 18, 25, 0, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#bdc3c7'; ctx.beginPath(); ctx.ellipse(0, -12, 12, 9, 0, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#fff';
                ctx.beginPath(); ctx.moveTo(-5, -8); ctx.lineTo(-3, 5); ctx.lineTo(0, -8); ctx.fill();
                ctx.beginPath(); ctx.moveTo(5, -8); ctx.lineTo(3, 5); ctx.lineTo(0, -8); ctx.fill();
                ctx.fillStyle = '#000';
                ctx.beginPath(); ctx.arc(-5, -18, 2, 0, Math.PI*2); ctx.fill();
                ctx.beginPath(); ctx.arc(5, -18, 2, 0, Math.PI*2); ctx.fill();
                ctx.strokeStyle = '#333'; ctx.lineWidth = 1;
                ctx.beginPath(); ctx.moveTo(-10, -12); ctx.lineTo(-18, -14); ctx.stroke();
                ctx.beginPath(); ctx.moveTo(-10, -10); ctx.lineTo(-18, -8); ctx.stroke();
                ctx.beginPath(); ctx.moveTo(10, -12); ctx.lineTo(18, -14); ctx.stroke();
                ctx.beginPath(); ctx.moveTo(10, -10); ctx.lineTo(18, -8); ctx.stroke();
            }
            else if (skinId === 'angel') {
                ctx.fillStyle = '#ecf0f1'; ctx.fillRect(-10, -30, 20, 30);
                ctx.strokeStyle='#f1c40f'; ctx.lineWidth=2; ctx.beginPath(); ctx.arc(0, -45, 8, 0, Math.PI*2); ctx.stroke();
                ctx.fillStyle = 'rgba(255,255,255,0.6)';
                ctx.beginPath(); ctx.ellipse(-15, -20, 10, 20, -0.5, 0, Math.PI*2); ctx.fill();
                ctx.beginPath(); ctx.ellipse(15, -20, 10, 20, 0.5, 0, Math.PI*2); ctx.fill();
            }
            else if (skinId === 'demon') {
                ctx.fillStyle = '#c0392b'; ctx.fillRect(-10, -30, 20, 30);
                ctx.beginPath(); ctx.arc(0, -35, 10, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#f1c40f';
                ctx.beginPath(); ctx.moveTo(-6, -37); ctx.lineTo(-2, -37); ctx.lineTo(-4, -34); ctx.fill();
                ctx.beginPath(); ctx.moveTo(6, -37); ctx.lineTo(2, -37); ctx.lineTo(4, -34); ctx.fill();
                ctx.fillStyle = '#000';
                ctx.beginPath(); ctx.moveTo(-6, -40); ctx.lineTo(-10, -50); ctx.lineTo(-2, -42); ctx.fill();
                ctx.beginPath(); ctx.moveTo(6, -40); ctx.lineTo(10, -50); ctx.lineTo(2, -42); ctx.fill();
            }
            else if (skinId === 'alien') {
                ctx.fillStyle = '#2ecc71'; ctx.fillRect(-8, -10, 16, 25);
                ctx.beginPath(); ctx.ellipse(0, -25, 10, 15, 0, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#000'; ctx.beginPath(); ctx.ellipse(-4, -25, 3, 5, -0.2, 0, Math.PI*2); ctx.fill();
                ctx.beginPath(); ctx.ellipse(4, -25, 3, 5, 0.2, 0, Math.PI*2); ctx.fill();
            }
            else if (skinId === 'astronaut') {
                ctx.fillStyle = '#fff'; ctx.fillRect(-12, -40, 24, 40);
                ctx.fillStyle = '#34495e'; ctx.fillRect(-8, -38, 16, 12);
                ctx.fillStyle = '#bdc3c7'; ctx.fillRect(-14, -15, 4, 20); ctx.fillRect(10, -15, 4, 20);
            }
            else if (skinId === 'gorilla') {
                ctx.fillStyle = '#2c3e50'; ctx.fillRect(-15, -30, 30, 30);
                ctx.beginPath(); ctx.arc(0, -35, 11, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#000'; ctx.beginPath(); ctx.ellipse(0, -35, 8, 4, 0, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#fff'; ctx.beginPath(); ctx.arc(-4, -35, 1, 0, Math.PI*2); ctx.fill();
                ctx.beginPath(); ctx.arc(4, -35, 1, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#000'; ctx.beginPath(); ctx.ellipse(0, -29, 5, 3, 0, 0, Math.PI*2); ctx.fill();
            }
            else if (skinId === 'buddha') {
                ctx.fillStyle = '#ff9800'; ctx.beginPath(); ctx.ellipse(0, -10, 14, 20, 0, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#e65100'; ctx.beginPath(); ctx.moveTo(-14,-15); ctx.lineTo(14,5); ctx.lineTo(14,-5); ctx.lineTo(-14,-25); ctx.fill();
                ctx.fillStyle = '#ffcc80'; ctx.beginPath(); ctx.arc(0, -30, 10, 0, Math.PI*2); ctx.fill();
                ctx.fillStyle = '#000'; ctx.beginPath(); ctx.arc(0, -38, 5, 0, Math.PI*2); ctx.fill();
                ctx.strokeStyle = '#000'; ctx.lineWidth = 1;
                ctx.beginPath(); ctx.arc(-4, -30, 3, 0, Math.PI, false); ctx.stroke();
                ctx.beginPath(); ctx.arc(4, -30, 3, 0, Math.PI, false); ctx.stroke();
            }
            else {
                // Default / Fallback
                ctx.fillStyle = '#f1c40f'; ctx.fillRect(-10, -30, 20, 20);
                const grad = ctx.createLinearGradient(-15, -10, 15, 20);
                grad.addColorStop(0, '#e74c3c'); grad.addColorStop(0.5, '#f1c40f'); grad.addColorStop(1, '#3498db');
                ctx.fillStyle = grad; ctx.fillRect(-12, -10, 24, 30);
                ctx.fillStyle = '#34495e'; ctx.fillRect(-12, 20, 10, 15); ctx.fillRect(2, 20, 10, 15);
            }

            ctx.restore();
        });
    });
</script>

