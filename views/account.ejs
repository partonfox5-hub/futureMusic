<%- include('partials/header') %>

<div class="container mx-auto px-4 py-8 relative z-10 min-h-screen">
    
    <!-- Page Header -->
    <div class="flex flex-col md:flex-row justify-between items-end mb-12 border-b border-yellow-700/30 pb-6">
        <div>
            <h1 class="text-4xl md:text-5xl text-gold mb-2">Command Center</h1>
            <p class="text-gray-400 font-light tracking-wider">Welcome back, Traveler.</p>
        </div>
        <a href="/logout" class="mt-4 md:mt-0 text-xs text-red-400 hover:text-red-300 uppercase tracking-widest border border-red-900/50 px-4 py-2 rounded hover:bg-red-900/20 transition-all inline-block text-center">
            <i class="fas fa-sign-out-alt mr-2"></i>Logout
        </a>

    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        
        <!-- Sidebar / Profile Summary -->
        <div class="lg:col-span-1">
            <div class="glass-card p-8 rounded-sm text-center relative overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-transparent via-[#D4AF37] to-transparent opacity-50"></div>
                
                <div class="w-24 h-24 mx-auto bg-black border-2 border-[#D4AF37] rounded-full flex items-center justify-center mb-4 shadow-[0_0_15px_rgba(212,175,55,0.3)]">
                    <i class="fas fa-user-astronaut text-4xl text-[#D4AF37]"></i>
                </div>
                
                <h2 class="text-xl text-white font-cinzel mb-1">Captain's Log</h2>
                <p class="text-sm text-gray-500 mb-6">member since 2025</p>
                
                <div class="text-left space-y-4">
                    <div class="group">
                        <label class="text-xs text-[#D4AF37] uppercase tracking-widest block mb-1">Email Frequency</label>
                        <div class="text-gray-300 font-mono text-sm">user@example.com</div>
                    </div>
                    <div class="group">
                        <label class="text-xs text-[#D4AF37] uppercase tracking-widest block mb-1">Membership Tier</label>
                        <div class="text-gray-300 font-mono text-sm flex items-center gap-2">
                            <i class="fas fa-crown text-xs"></i> Mystic One
                        </div>
                    </div>
                </div>

                <button class="w-full mt-8 btn-outline py-2 text-xs font-bold hover:bg-[#D4AF37] hover:text-black">
                    Edit Profile
                </button>
            </div>
        </div>

        <!-- Main Content Area -->
        <div class="lg:col-span-2 space-y-8">
            
            <!-- Recent Orders / Downloads -->
            <div class="glass-card p-6 rounded-sm">
                <h3 class="text-xl text-gold mb-6 border-b border-gray-800 pb-2 flex items-center gap-3">
                    <i class="fas fa-compact-disc text-sm"></i> Digital Transmissions
                </h3>
                
                <div class="space-y-4">
                    <!-- Item 1 -->
                    <div class="flex items-center justify-between bg-white/5 p-4 rounded border border-white/5 hover:border-[#D4AF37]/30 transition-colors">
                        <div class="flex items-center gap-4">
                            <div class="bg-black w-12 h-12 flex items-center justify-center text-[#20B2AA]">
                                <i class="fas fa-music"></i>
                            </div>
                            <div>
                                <h4 class="text-gray-200 font-bold text-sm">Neon Horizon EP</h4>
                                <p class="text-xs text-gray-500">Purchased on Oct 24, 2025</p>
                            </div>
                        </div>
                        <a href="#" class="text-[#D4AF37] hover:text-white text-sm uppercase tracking-wider text-xs font-bold">
                            <i class="fas fa-download mr-1"></i> Download
                        </a>
                    </div>
                    
                    <!-- Item 2 -->
                    <div class="flex items-center justify-between bg-white/5 p-4 rounded border border-white/5 hover:border-[#D4AF37]/30 transition-colors">
                        <div class="flex items-center gap-4">
                            <div class="bg-black w-12 h-12 flex items-center justify-center text-[#20B2AA]">
                                <i class="fas fa-file-contract"></i>
                            </div>
                            <div>
                                <h4 class="text-gray-200 font-bold text-sm">Commercial License #442</h4>
                                <p class="text-xs text-gray-500">Standard Rights</p>
                            </div>
                        </div>
                        <a href="#" class="text-[#D4AF37] hover:text-white text-sm uppercase tracking-wider text-xs font-bold">
                            <i class="fas fa-eye mr-1"></i> View
                        </a>
                    </div>
                </div>
            </div>
            
             <!-- Settings / Preferences -->
             <div class="glass-card p-6 rounded-sm">
                <h3 class="text-xl text-gold mb-6 border-b border-gray-800 pb-2 flex items-center gap-3">
                    <i class="fas fa-sliders-h text-sm"></i> Signal Settings
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <button class="text-left bg-black/40 hover:bg-[#D4AF37]/10 border border-gray-800 hover:border-[#D4AF37] p-4 rounded transition-all group">
                        <span class="block text-gray-300 group-hover:text-white font-bold mb-1">Payment Methods</span>
                        <span class="block text-xs text-gray-600">Manage saved cards</span>
                    </button>
                    <button class="text-left bg-black/40 hover:bg-[#D4AF37]/10 border border-gray-800 hover:border-[#D4AF37] p-4 rounded transition-all group">
                        <span class="block text-gray-300 group-hover:text-white font-bold mb-1">Order History</span>
                        <span class="block text-xs text-gray-600">View past receipts</span>
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

<%- include('partials/footer') %>