<%- include('partials/header') %>

<section class="min-h-screen bg-black text-white pt-32 pb-20 px-4 relative overflow-hidden">
    
    <div class="max-w-6xl mx-auto relative z-10 grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        
        <!-- Left Column: Product Image -->
        <div class="glass-card p-4 rounded-xl border border-[#D4AF37]/30 bg-black/40">
            <div class="relative aspect-square overflow-hidden rounded-lg">
                <img 
                    src="<%= product.image_url %>" 
                    onerror="this.src='https://placehold.co/600x600/111/D4AF37?text=NO+IMAGE'" 
                    alt="<%= product.name %>" 
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                >
            </div>
        </div>

        <!-- Right Column: Product Details -->
        <div>
            <div class="flex items-center gap-3 mb-4">
                <span class="px-3 py-1 bg-[#D4AF37]/10 border border-[#D4AF37]/30 text-[#D4AF37] text-xs font-bold rounded uppercase tracking-widest">
                    <%= product.type || 'Artifact' %>
                </span>
            </div>

            <h1 class="text-5xl md:text-6xl text-[#D4AF37] brand-font mb-4 leading-tight"><%= product.name %></h1>
            <p class="text-2xl text-gray-300 font-light mb-8 font-mono">$<%= product.price %></p>
            
            <div class="prose prose-invert text-gray-400 mb-8 max-w-none">
                <p><%= product.description %></p>
            </div>

            <!-- Size Selector (Conditional) -->
            <% 
                // Logic to safely parse sizes and ensure we have a valid list
                let availableSizes = [];
                if (product.sizes && typeof product.sizes === 'string') {
                    availableSizes = product.sizes.split(',').map(s => s.trim()).filter(s => s !== '');
                }
            %>

            <% if (availableSizes.length > 0) { %>
                <div class="mb-6">
                    <label for="size" class="text-[10px] uppercase text-[#D4AF37] tracking-widest font-bold mb-2 block">Select Size</label>
                    <select id="size" name="size" class="w-full bg-black/50 text-white border border-gray-700 rounded p-3 focus:border-[#D4AF37] outline-none transition-colors">
                        <% availableSizes.forEach(function(size) { %>
                            <option value="<%= size %>"><%= size %></option>
                        <% }); %>
                    </select>
                </div>
            <% } %>

            <!-- Add to Cart Button -->
            <button 
                id="addToCartMain"
                class="w-full py-4 bg-[#D4AF37] hover:bg-[#D4AF37]/90 text-black font-bold text-lg uppercase tracking-widest transition-all duration-300 transform hover:-translate-y-1 shadow-[0_0_20px_rgba(212,175,55,0.3)] flex items-center justify-center gap-3 mb-6"
                data-sku="<%= product.sku %>"
            >
                <span>Initialize Acquisition</span>
                <i class="fas fa-arrow-right"></i>
            </button>

            <!-- Metadata / Specs -->
            <div class="border-t border-gray-800 pt-6 grid grid-cols-2 gap-4 text-xs font-mono text-gray-500">
                <div>
                    <span class="block uppercase tracking-wider mb-1">SKU</span>
                    <span class="text-white"><%= product.sku %></span>
                </div>
                <div>
                    <span class="block uppercase tracking-wider mb-1">Availability</span>
                    <span class="text-white">
                        <% if (product.stock_quantity > 0) { %>
                            IN STOCK (<%= product.stock_quantity %>)
                        <% } else { %>
                            OUT OF STOCK
                        <% } %>
                    </span>
                </div>
            </div>
        </div>
    </div>

</section>

<%- include('partials/footer') %>

<script>
    const mainBtn = document.getElementById('addToCartMain');
    
    if (mainBtn) {
        mainBtn.addEventListener('click', async (e) => {
            e.preventDefault();
            
            const btn = e.target.closest('button');
            const sku = btn.dataset.sku;
            
            // CHANGED: Safe check for size element (it might not exist for digital items)
            const sizeElement = document.getElementById('size');
            const size = sizeElement ? sizeElement.value : null;

            // 1. Prepare Data
            let cookieSid = document.cookie.match(/connect.sid=([^;]+)/)?.[1];
            if (cookieSid) {
                cookieSid = decodeURIComponent(cookieSid).split('.')[0].slice(2);
            }
            const storeSessionId = localStorage.getItem('sessionId') || cookieSid || '';
            const payload = { sku, size, sessionId: storeSessionId };

            // 2. Visual Feedback (Loading)
            const originalText = btn.innerHTML;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> PROCESSING...';
            btn.disabled = true;

            // 3. Send to Server
            try {
                const res = await fetch('/api/cart/add', {
                    method: 'POST',
                    credentials: 'include',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                const data = await res.json();
                
                if (data.success) {
                    // Visual Feedback (Success)
                    btn.innerHTML = '<i class="fas fa-check"></i> ADDED';
                    btn.classList.remove('bg-[#D4AF37]', 'text-black');
                    btn.classList.add('bg-green-500', 'text-white');
                    
                    // Update Cart Count
                    const badge = document.getElementById('cart-count');
                    if (badge) {
                        let currentCount = parseInt(badge.innerText) || 0;
                        badge.innerText = currentCount + 1;
                        badge.classList.remove('hidden');
                    }

                    setTimeout(() => {
                        btn.innerHTML = originalText;
                        btn.classList.add('bg-[#D4AF37]', 'text-black');
                        btn.classList.remove('bg-green-500', 'text-white');
                        btn.disabled = false;
                    }, 2000);
                } else {
                    alert('Error: ' + (data.error || 'Could not add item'));
                    btn.innerHTML = originalText;
                    btn.disabled = false;
                }
            } catch (err) {
                console.error(err);
                alert('Connection Error');
                btn.innerHTML = originalText;
                btn.disabled = false;
            }
        });
    }
</script>