<%- include('partials/header') %>

<section class="min-h-screen bg-black text-white pt-32 pb-20 px-4 relative overflow-hidden">
    
    <div class="max-w-6xl mx-auto relative z-10 grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        
        <!-- Left Column: Product Image -->
        <div class="glass-card p-4 rounded-xl border border-[#D4AF37]/30 bg-black/40">
            <div class="relative aspect-square overflow-hidden rounded-lg">
                <img 
                    src="<%= product.image_url %>" 
                    onerror="this.src='https://placehold.co/600x600/111/D4AF37?text=NO+IMAGE'" 
                    alt="<%= product.name %>" 
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                >
            </div>
        </div>

        <!-- Right Column: Product Details -->
        <div>
            <div class="flex items-center gap-3 mb-4">
                <span class="px-3 py-1 bg-[#D4AF37]/10 border border-[#D4AF37]/30 text-[#D4AF37] text-xs font-bold rounded uppercase tracking-widest">
                    <%= product.type || 'Artifact' %>
                </span>
            </div>

            <h1 class="text-4xl md:text-5xl font-black text-[#D4AF37] mb-4 brand-font"><%= product.name %></h1>
            
            <div class="text-2xl text-white font-bold mb-6">$<%= Number(product.price).toFixed(2) %></div>

            <!-- Changed to <%- %> to render HTML tags properly -->
            <div class="text-gray-300 leading-relaxed mb-8 text-lg border-l-2 border-[#D4AF37]/50 pl-4 prose prose-invert">
                <%- product.description %>
            </div>

            <!-- SIZE SELECTOR -->
<% if (product.sizes && product.sizes.length > 0) { %>
    <% product.sizes.forEach((size, index) => { %>
        <label class="cursor-pointer">
            <!-- Logic: Add 'checked' attribute to the first item (index === 0) -->
            <input type="radio" name="selected_size" value="<%= size %>" class="peer sr-only" <%= index === 0 ? 'checked' : '' %>>
            <span class="block px-4 py-2 border border-gray-700 bg-black/50 text-gray-300 peer-checked:bg-[#D4AF37] peer-checked:text-black peer-checked:border-[#D4AF37] hover:border-[#D4AF37] transition-all text-sm font-bold uppercase">
                <%= size %>
            </span>
        </label>
    <% }); %>
<% } %>
<!-- SIZE SELECTION UI -->
            <% if (product.sizes && product.sizes.length > 0) { %>
                <div class="mb-6">
                    <h3 class="text-[#D4AF37] text-xs font-bold uppercase tracking-widest mb-3">Select Size</h3>
                    <div class="flex flex-wrap gap-2" id="size-selector-container">
                        <% product.sizes.forEach((size, i) => { %>
                            <label class="cursor-pointer group">
                                <input type="radio" name="selected_size" value="<%= size %>" class="peer sr-only">
                                <span class="block px-4 py-3 border border-gray-700 bg-black/50 text-gray-400 
                                             peer-checked:bg-[#D4AF37] peer-checked:text-black peer-checked:border-[#D4AF37] 
                                             peer-checked:font-bold
                                             group-hover:border-[#D4AF37]/50 
                                             transition-all text-sm uppercase">
                                    <%= size %>
                                </span>
                            </label>
                        <% }); %>
                    </div>
                    <p id="size-error-msg" class="text-red-500 text-xs mt-2 hidden"><i class="fas fa-exclamation-circle"></i> Please select a size option.</p>
                </div>
            <% } %>
            <!-- END SIZE SELECTION -->
            <!-- Add to Cart Action -->
            <button class="w-full btn-gold py-4 text-xl font-bold shadow-[0_0_20px_rgba(212,175,55,0.3)] hover:shadow-[0_0_30px_rgba(212,175,55,0.5)] flex items-center justify-center gap-3 add-to-cart-btn"
                data-id="<%= product.sku %>"
                data-name="<%= product.name %>"
                id="addToCartMain">
                <i class="fas fa-cart-plus"></i> ADD TO MANIFEST
            </button>

            <a href="/merch" class="block text-center mt-6 text-gray-500 hover:text-[#D4AF37] transition-colors text-sm uppercase tracking-widest">
                <i class="fas fa-arrow-left mr-2"></i> Return to Supply
            </a>
        </div>
    </div>

</section>

<script src="/js/store.js"></script>
<script>
    // Custom logic to grab the selected size
document.getElementById('addToCartMain').addEventListener('click', async (e) => {
        e.stopPropagation();
        e.preventDefault();

        const btn = e.target.closest('button');
        const sku = btn.dataset.id;
        
        // 1. Check for Size
        let size = null;
        const sizeOptions = document.querySelectorAll('input[name="selected_size"]');
        const selectedOption = document.querySelector('input[name="selected_size"]:checked');

        // VALIDATION: If sizes exist but none checked, STOP.
        if (sizeOptions.length > 0) {
            if (!selectedOption) {
                // Show error message and shake animation
                const errorMsg = document.getElementById('size-error-msg');
                if(errorMsg) errorMsg.classList.remove('hidden');
                
                // Optional: Scroll to size selector
                document.getElementById('size-selector-container').scrollIntoView({ behavior: 'smooth', block: 'center' });
                return; // <--- CRITICAL: Stops the function here
            } else {
                size = selectedOption.value;
                // Hide error if previously shown
                const errorMsg = document.getElementById('size-error-msg');
                if(errorMsg) errorMsg.classList.add('hidden');
            }
        }

        // 2. Prepare Data
        const payload = { sku, size };

        // 3. Send to Server
        try {
            const res = await fetch('/api/cart/add', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            const data = await res.json();
            
            if (data.success) {
                // Visual Feedback
                const originalText = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check"></i> ADDED';
                btn.classList.add('bg-[#D4AF37]', 'text-black');
                setTimeout(() => {
                    btn.innerHTML = originalText;
                    btn.classList.remove('bg-[#D4AF37]', 'text-black');
                    // Refresh cart count if you have a function for it
                    if (window.updateCartCount) window.updateCartCount(); 
                }, 2000);
            } else {
                alert('Error adding to manifest');
            }
        } catch (err) {
            console.error(err);
        }
    });
</script>
<%- include('partials/footer') %>