<%- include('partials/header') %>

<section class="min-h-screen bg-black text-white pt-32 pb-20 px-4 relative overflow-hidden">
    
    <div class="max-w-6xl mx-auto relative z-10 grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        
        <!-- Left Column: Product Image -->
        <div class="glass-card p-4 rounded-xl border border-[#D4AF37]/30 bg-black/40">
            <div class="relative aspect-square overflow-hidden rounded-lg">
                <img 
                    src="<%= product.image %>" 
                    onerror="this.src='https://placehold.co/600x600/111/D4AF37?text=NO+IMAGE'" 
                    alt="<%= product.name %>" 
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                >
            </div>
        </div>

        <!-- Right Column: Product Details -->
        <div>
            <h1 class="text-4xl md:text-5xl font-black text-[#D4AF37] mb-4 brand-font"><%= product.name %></h1>
            
            <div class="text-2xl text-white font-bold mb-6">$<%= product.price.toFixed(2) %></div>

            <p class="text-gray-300 leading-relaxed mb-8 text-lg">
                <%= product.description %>
            </p>

            <!-- Specs / Details (Mock Data) -->
            <div class="mb-8 border-t border-b border-gray-800 py-6 space-y-3">
                <div class="flex justify-between text-sm">
                    <span class="text-gray-500 uppercase tracking-wider">Material</span>
                    <span class="text-gray-300">Premium Synthesis</span>
                </div>
                <div class="flex justify-between text-sm">
                    <span class="text-gray-500 uppercase tracking-wider">Availability</span>
                    <span class="text-[#20B2AA] font-bold">In Stock</span>
                </div>
                <div class="flex justify-between text-sm">
                    <span class="text-gray-500 uppercase tracking-wider">Shipping</span>
                    <span class="text-gray-300">Global Priority</span>
                </div>
            </div>

            <!-- Add to Cart Action -->
            <button class="w-full btn-gold py-4 text-xl font-bold shadow-[0_0_20px_rgba(212,175,55,0.3)] hover:shadow-[0_0_30px_rgba(212,175,55,0.5)] flex items-center justify-center gap-3 add-to-cart-btn"
                data-id="<%= product.id %>"
                data-name="<%= product.name %>"
                data-price="<%= product.price %>"
                data-type="merch">
                <i class="fas fa-cart-plus"></i> ADD TO MANIFEST
            </button>

            <a href="/merch" class="block text-center mt-6 text-gray-500 hover:text-[#D4AF37] transition-colors text-sm uppercase tracking-widest">
                <i class="fas fa-arrow-left mr-2"></i> Return to Armory
            </a>
        </div>
    </div>

</section>

<!-- Include Store Logic -->
<script src="/js/store.js"></script>

<%- include('partials/footer') %>