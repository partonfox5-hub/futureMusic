<%- include('partials/header') %>

<section class="min-h-screen bg-black text-white pt-32 pb-20 px-4 relative overflow-hidden">
    
    <div class="max-w-6xl mx-auto relative z-10 grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        
        <!-- Left Column: Product Image -->
        <div class="glass-card p-4 rounded-xl border border-[#D4AF37]/30 bg-black/40">
            <div class="relative aspect-square overflow-hidden rounded-lg">
                <img 
                    src="<%= product.image_url %>" 
                    onerror="this.src='https://placehold.co/600x600/111/D4AF37?text=NO+IMAGE'" 
                    alt="<%= product.name %>" 
                    class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                >
            </div>
        </div>

        <!-- Right Column: Product Details -->
        <div>
            <div class="flex items-center gap-3 mb-4">
                <span class="px-3 py-1 bg-[#D4AF37]/10 border border-[#D4AF37]/30 text-[#D4AF37] text-xs font-bold rounded uppercase tracking-widest">
                    <%= product.type || 'Artifact' %>
                </span>
            </div>

            <h1 class="text-4xl md:text-5xl font-black text-[#D4AF37] mb-4 brand-font"><%= product.name %></h1>
            
            <div class="text-2xl text-white font-bold mb-6">$<%= Number(product.price).toFixed(2) %></div>

            <p class="text-gray-300 leading-relaxed mb-8 text-lg border-l-2 border-[#D4AF37]/50 pl-4">
                <%= product.description %>
            </p>

            <!-- SIZE SELECTOR -->
            <% if (product.sizes && product.sizes.length > 0) { %>
                <div class="mb-8">
                    <label class="block text-gray-400 text-sm uppercase tracking-wider mb-3">Select Size</label>
                    <div class="flex flex-wrap gap-3" id="size-options">
                        <% product.sizes.forEach((size, index) => { %>
                            <label class="cursor-pointer">
                                <input type="radio" name="selected_size" value="<%= size %>" class="peer sr-only" <%= index === 0 ? 'checked' : '' %>>
                                <div class="px-6 py-3 border border-gray-600 rounded text-gray-300 peer-checked:bg-[#D4AF37] peer-checked:text-black peer-checked:border-[#D4AF37] hover:border-[#D4AF37] transition-all font-bold">
                                    <%= size %>
                                </div>
                            </label>
                        <% }); %>
                    </div>
                </div>
            <% } %>

            <!-- Add to Cart Action -->
            <button class="w-full btn-gold py-4 text-xl font-bold shadow-[0_0_20px_rgba(212,175,55,0.3)] hover:shadow-[0_0_30px_rgba(212,175,55,0.5)] flex items-center justify-center gap-3 add-to-cart-btn"
                data-id="<%= product.sku %>"
                data-name="<%= product.name %>"
                id="addToCartMain">
                <i class="fas fa-cart-plus"></i> ADD TO MANIFEST
            </button>

            <a href="/merch" class="block text-center mt-6 text-gray-500 hover:text-[#D4AF37] transition-colors text-sm uppercase tracking-widest">
                <i class="fas fa-arrow-left mr-2"></i> Return to Supply
            </a>
        </div>
    </div>

</section>

<script src="/js/store.js"></script>
<script>
    // Custom logic to grab the selected size
    document.getElementById('addToCartMain').addEventListener('click', (e) => {
        e.stopPropagation(); // Stop global listener
        e.preventDefault();

        const btn = e.target.closest('button');
        const sku = btn.dataset.id;
        
        // Find selected size
        let size = null;
        const sizeInput = document.querySelector('input[name="selected_size"]:checked');
        if (sizeInput) {
            size = sizeInput.value;
        } else if (document.querySelector('input[name="selected_size"]')) {
            // Sizes exist but none selected (though we set default checked above)
            alert("Please select a size.");
            return;
        }

        // Call store with size
        Store.add(sku, size);
    });
</script>
<%- include('partials/footer') %>