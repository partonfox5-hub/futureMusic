<%- include('partials/header') %>

<section class="max-w-7xl mx-auto py-12 px-4">
    
    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-6">
        <div>
            <h1 class="text-4xl text-[#D4AF37] brand-font mb-2">Merch Protocol</h1>
            <p class="text-gray-400 text-sm">Official equipment and artifacts.</p>
        </div>

        <!-- Filter & Sort Form -->
        <form action="/merch" method="GET" class="glass-card p-4 rounded-lg flex flex-wrap gap-4 items-center border border-gray-700">
                       <!-- Search By Name -->
            <div class="flex flex-col">
                <label class="text-[10px] uppercase text-[#D4AF37] tracking-widest font-bold mb-1">Search</label>
                <input 
                    type="text" 
                    name="search" 
                    value="<%= query.search || '' %>" 
                    placeholder="Find artifact..." 
                    class="bg-black/50 text-white text-sm border border-gray-600 rounded px-3 py-2 outline-none focus:border-[#D4AF37] w-48 placeholder-gray-500"
                >
            </div>
           
            <!-- Filter Type -->
            <div class="flex flex-col">
                <label class="text-[10px] uppercase text-[#D4AF37] tracking-widest font-bold mb-1">Type</label>
                <select name="type" onchange="this.form.submit()" class="bg-black/50 text-white text-sm border border-gray-600 rounded px-3 py-2 outline-none focus:border-[#D4AF37]">
                    <option value="all" <%= (!query.type || query.type === 'all') ? 'selected' : '' %>>All Classes</option>
                    <option value="T-Shirts" <%= query.type === 'T-Shirts' ? 'selected' : '' %>>T-Shirts</option>
                    <option value="Hoodies" <%= query.type === 'Hoodies' ? 'selected' : '' %>>Hoodies & Sweatshirts</option>
                    <option value="Long Sleeves" <%= query.type === 'Long Sleeves' ? 'selected' : '' %>>Long Sleeves</option>
                    <option value="Bottoms" <%= query.type === 'Bottoms' ? 'selected' : '' %>>Bottoms</option>
                    <option value="Accessories" <%= query.type === 'Accessories' ? 'selected' : '' %>>Accessories</option>
                    <option value="Apparel" <%= query.type === 'Apparel' ? 'selected' : '' %>>Other Apparel</option>
                </select>
            </div>

            <!-- Sort -->
            <div class="flex flex-col">
                <label class="text-[10px] uppercase text-[#D4AF37] tracking-widest font-bold mb-1">Sort</label>
                <select name="sort" onchange="this.form.submit()" class="bg-black/50 text-white text-sm border border-gray-600 rounded px-3 py-2 outline-none focus:border-[#D4AF37]">
                    <option value="newest" <%= query.sort === 'newest' ? 'selected' : '' %>>Newest First</option>
                    <option value="price_asc" <%= query.sort === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                    <option value="price_desc" <%= query.sort === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                </select>
            </div>
        </form>
    </div>

    <!-- Error/Debug Display -->
    <% if (typeof debugError !== 'undefined' && debugError) { %>
        <div class="bg-red-900/90 border border-red-500 text-white p-4 rounded mb-8">
            <h3 class="font-bold">⚠️ SYSTEM ERROR</h3>
            <p class="font-mono text-sm"><%= debugError %></p>
        </div>
    <% } %>

    <!-- Product Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% if (merch.length > 0) { %>
            <% merch.forEach(item => { %>
                <div class="glass-card rounded-xl overflow-hidden group hover:border-[#D4AF37]/50 transition-all duration-300 border border-gray-800 flex flex-col h-full">
                    <!-- Image -->
                    <div class="relative h-64 overflow-hidden">
                        <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
                        <div class="absolute top-2 right-2 bg-black/80 backdrop-blur text-[#D4AF37] text-xs font-bold px-3 py-1 rounded-full border border-[#D4AF37]/30">
                            $<%= Number(item.price).toFixed(2) %>
                        </div>
                    </div>

                    <!-- Content -->
                    <div class="p-6 flex flex-col flex-grow">
                        <div class="flex justify-between items-start mb-2">
                            <span class="text-xs text-gray-500 uppercase tracking-widest"><%= item.type %></span>
                        </div>

                        <a href="/merch/<%= item.id %>" class="flex-grow">
                            <!-- Clean Name: Automatically remove 'Copy of' from display -->
                            <h3 class="text-xl font-bold text-white mb-2 group-hover:text-[#D4AF37] transition-colors">
                                <%= item.name.replace(/^Copy of\s+/i, '') %>
                            </h3>
                        </a>
                        
                        <!-- Strip HTML tags for cleaner preview -->
                        <p class="text-gray-400 text-sm mb-6 line-clamp-2">
                            <%= item.description ? item.description.replace(/<[^>]*>?/gm, ' ') : '' %>
                        </p>
                        
                        <!-- Action Buttons -->
<!-- Action Buttons -->
<!-- Action Buttons -->
                        <div class="mt-auto">
                                                    
<% 
    // Fix: Ensure strict array check and string type to prevent empty selectors
    const validSizes = (Array.isArray(item.sizes) ? item.sizes : []).filter(s => typeof s === 'string' && s.trim().length > 0);
%>
<% if (validSizes.length > 0 && item.type !== 'digital') { %>

    <!-- Size Selector & Add Button -->
    <div class="flex flex-col gap-2">
        <select class="w-full bg-black/50 text-white text-xs border border-gray-600 rounded px-2 py-3 outline-none focus:border-[#D4AF37] size-selector" 
                id="size-select-<%= item.sku %>">
            <option value="" disabled selected>Select Size</option>
            <% validSizes.forEach(size => { %>
                <option value="<%= size %>"><%= size %></option>
            <% }); %>
        </select>
                                    
                                    <button class="w-full btn-gold py-3 text-xs font-bold hover:scale-105 transition-transform quick-add-size-btn" 
                                        data-id="<%= item.sku %>" 
                                        data-name="<%= item.name %>">
                                        ADD TO CART
                                    </button>
                                </div>
                            <% } else { %>
                                <!-- No sizes: Standard Quick Add -->
                                <button class="w-full btn-gold py-3 text-xs font-bold add-to-cart-btn hover:scale-105 transition-transform" 
                                    data-id="<%= item.sku %>" 
                                    data-name="<%= item.name %>">
                                    QUICK ADD
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-span-full text-center py-20 bg-gray-900/30 rounded-xl border border-dashed border-gray-700">
                <i class="fas fa-box-open text-4xl text-gray-600 mb-4"></i>
                <p class="text-gray-400">No artifacts found matching your filters.</p>
                <a href="/merch" class="text-[#D4AF37] text-sm mt-2 hover:underline">Clear Filters</a>
            </div>
        <% } %>
    </div>
</section>

<script src="/js/store.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Handle clicks for the new "Size Required" buttons
        document.querySelectorAll('.quick-add-size-btn').forEach(btn => {
            btn.addEventListener('click', async (e) => {
                e.preventDefault();
                const sku = btn.dataset.id;
                
                // Find the associated select box
                const selectBox = document.getElementById(`size-select-${sku}`);
                const size = selectBox ? selectBox.value : null;

                // Validation: Check if a size is actually selected
                if (!size) {
                    alert('Please select a size first.');
                    selectBox.focus();
                    selectBox.classList.add('border-red-500'); // Visual cue
                    setTimeout(() => selectBox.classList.remove('border-red-500'), 2000);
                    return;
                }

                // Send to Server
                // Send to Server
                try {
                    const storeSessionId = localStorage.getItem('sessionId');
                    
                    const res = await fetch('/api/cart/add', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ sku, size, sessionId: storeSessionId })
                    });

                    // Check if response is JSON
                    const contentType = res.headers.get("content-type");
                    if (!contentType || !contentType.includes("application/json")) {
                        const textText = await res.text();
                        console.error("Server returned non-JSON:", textText);
                        throw new Error("Server Error: Check console for details");
                    }

                    const data = await res.json();
                    
                                      if (data.success) {
                        // Success Feedback
                        const originalText = btn.innerHTML;
                        btn.innerHTML = 'ADDED';
                        btn.classList.add('bg-white', 'text-black');
                        
                        // --- FIX: Update Cart Badge Instantly ---
                        if (data.newCount !== undefined) {
                            const badge = document.getElementById('cart-count');
                            if (badge) {
                                badge.innerText = data.newCount;
                                badge.classList.remove('hidden');
                            }
                        }
                        // ----------------------------------------

                        setTimeout(() => {
                            btn.innerHTML = originalText;
                            btn.classList.remove('bg-white', 'text-black');
                        }, 2000);
                    } else {
                        // LOG THE SERVER ERROR TO CONSOLE
                        console.error("SERVER ERROR DETAILS:", data);
                        alert('Error: ' + (data.error || 'Unknown error'));
                    }
                } catch (err) {
                    console.error('Add to cart failed:', err);
                }
            });
        });
    });
</script>
<%- include('partials/footer') %>