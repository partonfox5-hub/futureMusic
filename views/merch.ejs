<%- include('partials/header') %>

<section class="max-w-6xl mx-auto py-12 px-4">
    <h1 class="text-4xl md:text-6xl text-center mb-16 text-gold brand-font">Physical Assets</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
        <% merch.forEach(function(item) { %>
            <div class="glass-card rounded-xl overflow-hidden group flex flex-col h-full">
                <!-- Image Container -->
                <div class="relative h-64 bg-gray-900 overflow-hidden">
                    <img src="<%= item.image %>" onerror="this.src='https://placehold.co/400x400/111/D4AF37?text=NO+IMAGE'" alt="<%= item.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                    <div class="absolute top-4 right-4 bg-black/80 text-[#D4AF37] px-3 py-1 font-bold rounded border border-[#D4AF37]">
                        $<%= item.price.toFixed(2) %>
                    </div>
                </div>

                <div class="p-6 flex flex-col flex-grow">
                    <h3 class="text-2xl font-bold text-white mb-2"><%= item.name %></h3>
                    <p class="text-gray-400 text-sm mb-6 flex-grow"><%= item.description %></p>
                    
                    <button class="w-full btn-gold py-3 text-sm font-bold add-to-cart-btn" 
                        data-id="<%= item.id %>" 
                        data-name="<%= item.name %>" 
                        data-price="<%= item.price %>"
                        data-type="merch">
                        ACQUIRE ASSET
                    </button>
                </div>
            </div>
        <% }); %>
    </div>
</section>

<script src="/js/store.js"></script>
<%- include('partials/footer') %>