<%- include('partials/header') %>

<section class="max-w-7xl mx-auto py-12 px-4">
    
    <div class="flex flex-col md:flex-row justify-between items-end mb-8 gap-6">
        <div>
            <h1 class="text-4xl text-[#D4AF37] brand-font mb-2">Merch Protocol</h1>
            <p class="text-gray-400 text-sm">Official equipment and artifacts.</p>
        </div>

        <!-- Filter & Sort Form -->
        <form action="/merch" method="GET" class="glass-card p-4 rounded-lg flex flex-wrap gap-4 items-center border border-gray-700">
            <!-- Filter Type -->
            <div class="flex flex-col">
                <label class="text-[10px] uppercase text-[#D4AF37] tracking-widest font-bold mb-1">Type</label>
                <select name="type" onchange="this.form.submit()" class="bg-black/50 text-white text-sm border border-gray-600 rounded px-3 py-2 outline-none focus:border-[#D4AF37]">
                    <option value="all" <%= (!query.type || query.type === 'all') ? 'selected' : '' %>>All Classes</option>
                    <option value="Apparel" <%= query.type === 'Apparel' ? 'selected' : '' %>>Apparel</option>
                    <option value="Music" <%= query.type === 'Music' ? 'selected' : '' %>>Music (Physical)</option>
                    <option value="Accessory" <%= query.type === 'Accessory' ? 'selected' : '' %>>Accessories</option>
                </select>
            </div>

            <!-- Sort -->
            <div class="flex flex-col">
                <label class="text-[10px] uppercase text-[#D4AF37] tracking-widest font-bold mb-1">Sort</label>
                <select name="sort" onchange="this.form.submit()" class="bg-black/50 text-white text-sm border border-gray-600 rounded px-3 py-2 outline-none focus:border-[#D4AF37]">
                    <option value="newest" <%= query.sort === 'newest' ? 'selected' : '' %>>Newest First</option>
                    <option value="price_asc" <%= query.sort === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                    <option value="price_desc" <%= query.sort === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                </select>
            </div>
        </form>
    </div>

    <!-- Error/Debug Display -->
    <% if (typeof debugError !== 'undefined' && debugError) { %>
        <div class="bg-red-900/90 border border-red-500 text-white p-4 rounded mb-8">
            <h3 class="font-bold">⚠️ SYSTEM ERROR</h3>
            <p class="font-mono text-sm"><%= debugError %></p>
        </div>
    <% } %>

    <!-- Product Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% if (merch.length > 0) { %>
            <% merch.forEach(item => { %>
                <div class="glass-card rounded-xl overflow-hidden group hover:border-[#D4AF37]/50 transition-all duration-300 border border-gray-800 flex flex-col h-full">
                    <!-- Image -->
                    <div class="relative h-64 overflow-hidden">
                        <img src="<%= item.image_url %>" alt="<%= item.name %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700">
                        <div class="absolute top-2 right-2 bg-black/80 backdrop-blur text-[#D4AF37] text-xs font-bold px-3 py-1 rounded-full border border-[#D4AF37]/30">
                            $<%= Number(item.price).toFixed(2) %>
                        </div>
                    </div>

                    <!-- Content -->
                    <div class="p-6 flex flex-col flex-grow">
                        <div class="flex justify-between items-start mb-2">
                            <span class="text-xs text-gray-500 uppercase tracking-widest"><%= item.type %></span>
                        </div>

                        <a href="/merch/<%= item.id %>" class="flex-grow">
                            <h3 class="text-xl font-bold text-white mb-2 group-hover:text-[#D4AF37] transition-colors"><%= item.name %></h3>
                        </a>
                        
                        <!-- Strip HTML tags for cleaner preview using regex replace -->
                        <p class="text-gray-400 text-sm mb-6 line-clamp-2">
                            <%= item.description ? item.description.replace(/<[^>]*>?/gm, ' ') : '' %>
                        </p>
                        
                        <!-- Action Buttons -->
                        <div class="mt-auto">
                            <% if (item.sizes && item.sizes.length > 0) { %>
                                <!-- Item has sizes: Must go to detail page -->
                                <a href="/merch/<%= item.id %>" class="w-full block text-center btn-outline py-3 text-xs font-bold rounded hover:bg-[#D4AF37] hover:text-black transition-all">
                                    SELECT OPTIONS
                                </a>
                            <% } else { %>
                                <!-- No sizes: Can Quick Add -->
                                <button class="w-full btn-gold py-3 text-xs font-bold add-to-cart-btn hover:scale-105 transition-transform" 
                                    data-id="<%= item.sku %>" 
                                    data-name="<%= item.name %>">
                                    QUICK ADD
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-span-full text-center py-20 bg-gray-900/30 rounded-xl border border-dashed border-gray-700">
                <i class="fas fa-box-open text-4xl text-gray-600 mb-4"></i>
                <p class="text-gray-400">No artifacts found matching your filters.</p>
                <a href="/merch" class="text-[#D4AF37] text-sm mt-2 hover:underline">Clear Filters</a>
            </div>
        <% } %>
    </div>
</section>

<script src="/js/store.js"></script>
<%- include('partials/footer') %>