<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- Content Security Policy: Updated to be fully permissive for fonts and scripts -->
    <meta http-equiv="Content-Security-Policy" content="default-src * 'unsafe-inline' 'unsafe-eval' data: blob:; script-src * 'unsafe-inline' 'unsafe-eval'; connect-src * 'unsafe-inline'; img-src * data: blob:; frame-src *; style-src * 'unsafe-inline'; font-src * data: blob:;">

    <link rel="icon" type="image/png" href="/images/logo.png">

    <title><%= typeof title !== 'undefined' ? title : "Future Music Collective" %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://js.stripe.com/v3/"></script> <!-- Stripe JS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700;900&family=Raleway:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        :root {
            --gold-primary: #D4AF37;
            --gold-light: #F4C430;
            --gold-dark: #AA8C2C;
            --void-black: #050505;
            --eye-teal: #20B2AA;
        }

        body {
            font-family: 'Raleway', sans-serif;
            background-color: var(--void-black);
            color: white;
        }

        .brand-font {
            font-family: 'Cinzel', serif;
        }

        .text-gold { color: var(--gold-primary); }
        .bg-gold { background-color: var(--gold-primary); }
        
        .glass-card {
            background: rgba(255, 255, 255, 0.03);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            border: 1px solid rgba(212, 175, 55, 0.1);
        }

        .btn-gold {
            background: linear-gradient(45deg, var(--gold-dark), var(--gold-primary));
            color: black;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        
        .btn-gold:hover {
            background: linear-gradient(45deg, var(--gold-primary), var(--gold-light));
            transform: translateY(-2px);
            box-shadow: 0 0 15px rgba(212, 175, 55, 0.4);
        }

        .btn-outline {
            border: 1px solid var(--gold-primary);
            color: var(--gold-primary);
            transition: all 0.3s ease;
        }

        .btn-outline:hover {
            background: var(--gold-primary);
            color: black;
        }

        /* Cart Badge */
        .cart-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: var(--eye-teal);
            color: black;
            font-size: 0.7rem;
            font-weight: bold;
            width: 18px;
            height: 18px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body class="flex flex-col min-h-screen">

    <!-- NAVIGATION -->
    <nav class="fixed w-full z-50 transition-all duration-300 bg-black/90 backdrop-blur-md border-b border-yellow-700/30">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-20 items-center">
                
                <!-- Logo -->
                <a href="/" class="flex items-center space-x-3 group">
                    <!-- Placeholder Icon/Logo if image fails -->
                    <i class="fas fa-broadcast-tower text-3xl text-[#D4AF37] group-hover:text-white transition-colors"></i>
                    <span class="brand-font text-xl md:text-2xl font-bold tracking-widest text-white group-hover:text-[#D4AF37] transition-colors">
                        FUTURE MUSIC COLLECTIVE
                    </span>
                </a>

                <!-- Desktop Menu -->
                <div class="hidden md:flex items-center space-x-8">
                    <a href="/" class="text-gray-300 hover:text-[#D4AF37] transition-colors text-sm uppercase font-bold tracking-widest">Home</a>
                    <a href="/music" class="text-gray-300 hover:text-[#D4AF37] transition-colors text-sm uppercase font-bold tracking-widest">Music</a>
                    <a href="/rights" class="text-gray-300 hover:text-[#D4AF37] transition-colors text-sm uppercase font-bold tracking-widest">Rights</a>
                    <a href="/merch" class="text-gray-300 hover:text-[#D4AF37] transition-colors text-sm uppercase font-bold tracking-widest">Merch</a>
                    <a href="/projects" class="text-gray-300 hover:text-[#D4AF37] transition-colors text-sm uppercase font-bold tracking-widest">Projects</a>
                    <!-- NEW ADVOCACY LINK -->
                    <a href="/advocacy" class="text-gray-300 hover:text-[#D4AF37] transition-colors text-sm uppercase font-bold tracking-widest">Advocacy</a>
                </div>

                <!-- Right Side: Cart & Contact -->
                <div class="flex items-center space-x-6">
                    <a href="/cart" class="relative text-gray-300 hover:text-[#D4AF37] transition-colors">
                        <i class="fas fa-shopping-cart text-xl"></i>
                        <span id="cart-count" class="cart-badge hidden">0</span>
                    </a>

                    <a href="/contact" class="ml-4 px-4 py-2 border border-[#D4AF37] text-[#D4AF37] hover:bg-[#D4AF37] hover:text-black transition-all text-sm uppercase font-bold rounded-sm">Contact</a>
                </div>

                <button class="md:hidden text-[#D4AF37]" onclick="document.getElementById('mobile-menu').classList.toggle('hidden')">
                    <i class="fas fa-bars text-2xl"></i>
                </button>
            </div>
        </div>
        
        <div id="mobile-menu" class="hidden md:hidden bg-black border-t border-yellow-700/30">
            <div class="flex flex-col p-4 space-y-4 text-center">
                <a href="/" class="text-gray-300 hover:text-[#D4AF37]">HOME</a>
                <a href="/music" class="text-gray-300 hover:text-[#D4AF37]">MUSIC</a>
                <a href="/rights" class="text-gray-300 hover:text-[#D4AF37]">RIGHTS</a>
                <a href="/merch" class="text-gray-300 hover:text-[#D4AF37]">MERCH</a>
                <a href="/projects" class="text-gray-300 hover:text-[#D4AF37]">PROJECTS</a>
                <!-- NEW MOBILE ADVOCACY LINK -->
                <a href="/advocacy" class="text-gray-300 hover:text-[#D4AF37]">ADVOCACY</a>
                <a href="/contact" class="text-[#D4AF37] font-bold">CONTACT</a>
            </div>
        </div>
    </nav>