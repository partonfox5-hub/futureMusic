                            <stop offset="0%" style="stop-color:#FDB931;stop-opacity:1" /> <!-- Metallic Gold -->
                            <stop offset="50%" style="stop-color:#D4AF37;stop-opacity:1" /> <!-- Standard Gold -->
                            <stop offset="100%" style="stop-color:#996515;stop-opacity:1" /> <!-- Bronze/Dark -->
                        </linearGradient>
                    </defs>

                    <g transform="translate(50,50)">
                        <!-- 1. The Rays -->
