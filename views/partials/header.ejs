                            <polygon points="0,-48 2,-25 0,-20 -2,-25" />
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(22.5)" opacity="0.6" />
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(45)" />
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(67.5)" opacity="0.6"/>
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(90)" />
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(112.5)" opacity="0.6"/>
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(135)" />
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(157.5)" opacity="0.6"/>
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(180)" />
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(202.5)" opacity="0.6"/>
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(225)" />
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(247.5)" opacity="0.6"/>
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(270)" />
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(292.5)" opacity="0.6"/>
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(315)" />
                            <polygon points="0,-48 2,-25 0,-20 -2,-25" transform="rotate(337.5)" opacity="0.6"/>
                        </g>

                        <!-- Flames (Wavy, interspersed) -->
                        <g fill="none" stroke="url(#majesticGold)" stroke-width="1.5">
                            <path d="M0 -22 Q3 -30 0 -40" transform="rotate(11.25)" />
                            <path d="M0 -22 Q-3 -30 0 -40" transform="rotate(33.75)" />
                            <path d="M0 -22 Q3 -30 0 -40" transform="rotate(56.25)" />
                            <path d="M0 -22 Q-3 -30 0 -40" transform="rotate(78.75)" />
                            <path d="M0 -22 Q3 -30 0 -40" transform="rotate(101.25)" />
                            <path d="M0 -22 Q-3 -30 0 -40" transform="rotate(123.75)" />
                            <path d="M0 -22 Q3 -30 0 -40" transform="rotate(146.25)" />
                            <path d="M0 -22 Q-3 -30 0 -40" transform="rotate(168.75)" />
                            <path d="M0 -22 Q3 -30 0 -40" transform="rotate(191.25)" />
                            <path d="M0 -22 Q-3 -30 0 -40" transform="rotate(213.75)" />
                            <path d="M0 -22 Q3 -30 0 -40" transform="rotate(236.25)" />
                            <path d="M0 -22 Q-3 -30 0 -40" transform="rotate(258.75)" />
                            <path d="M0 -22 Q3 -30 0 -40" transform="rotate(281.25)" />
                            <path d="M0 -22 Q-3 -30 0 -40" transform="rotate(303.75)" />
                            <path d="M0 -22 Q3 -30 0 -40" transform="rotate(326.25)" />
                            <path d="M0 -22 Q-3 -30 0 -40" transform="rotate(348.75)" />
                        </g>

                        <!-- The Face Disc -->
                        <circle cx="0" cy="0" r="20" fill="url(#majesticGold)" stroke="#785c18" stroke-width="0.8"/>
                        
                        <!-- Somber Face Features -->
                        <g fill="#785c18">
                            <!-- Heavy Eyelids (Somber Look) -->
                            <path d="M-9 -4 Q-5 -7 -1 -4 L-1 -3 Q-5 -6 -9 -3 Z" />
                            <path d="M9 -4 Q5 -7 1 -4 L1 -3 Q5 -6 9 -3 Z" />
                            
                            <!-- Eyes (Sharp Almonds) -->
                            <circle cx="-5" cy="-1.5" r="1.2" fill="#3d2e0c" />
                            <circle cx="5" cy="-1.5" r="1.2" fill="#3d2e0c" />

                            <!-- Nose (Straight, Long, Stern) -->
                            <path d="M0 -4 L-1.5 8 L1.5 8 L0 -4 Z" opacity="0.3"/> 
                            <path d="M0 -4 L0 8" fill="none" stroke="#785c18" stroke-width="0.5" />
                            <path d="M-2.5 8 Q0 10 2.5 8" fill="none" stroke="#785c18" stroke-width="0.8" />

                            <!-- Mouth (Straight line, slightly downturned corners, Majestic/Severe) -->
                            <path d="M-5 14 Q0 13.5 5 14" fill="none" stroke="#785c18" stroke-width="1" stroke-linecap="round" />
                            <!-- Lower Lip Shadow -->
                            <path d="M-2 15 Q0 16 2 15" fill="none" stroke="#785c18" stroke-width="0.5" opacity="0.5"/>
                            
                            <!-- Cheeks (Hollowed/Contoured) -->
                            <path d="M-12 5 Q-14 10 -10 15" fill="none" stroke="#785c18" stroke-width="0.3" opacity="0.4"/>
                            <path d="M12 5 Q14 10 10 15" fill="none" stroke="#785c18" stroke-width="0.3" opacity="0.4"/>
                        </g>
                    </g>
                </svg>
                <div class="flex flex-col">
                    <span class="text-xl font-extrabold text-white tracking-tight leading-none group-hover:text-[#FFD700] transition-colors font-serif">SHINE MORE</span>
                    <span class="text-[0.6rem] uppercase tracking-[0.2em] text-[#a5b4fc]">Online</span>
                </div>
            </a>

            <!-- Desktop Nav -->
            <div class="hidden md:flex items-center space-x-10">
                <a href="/" class="nav-link">Overview</a>
                <a href="/services" class="nav-link">Expertise</a>
                <a href="/portfolio" class="nav-link">Case Studies</a>
                <a href="/about" class="nav-link">Agency</a>
                <a href="/contact" class="btn-gold text-xs py-3 px-8 ml-4">Start Project</a>
            </div>

            <!-- Mobile Toggle -->
            <button class="md:hidden text-[#FFD700] text-2xl" onclick="document.getElementById('mobile-menu').classList.toggle('hidden')">
                <i class="fas fa-bars"></i>
            </button>
        </div>
        
        <!-- Mobile Menu -->
