   <style>
        :root {
            --gold-primary: #D4AF37;
            --gold-light: #F4C430;
            --gold-dark: #AA8C2C;
            --void-black: #050505;
            --eye-teal: #20B2AA;
        }

        body {
            font-family: 'Raleway', sans-serif;
            background-color: var(--void-black);
            color: #fff;
            overflow-x: hidden;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        h1, h2, h3, .brand-font {
            font-family: 'Cinzel', serif;
        }

        /* Skip to Content Link Styles */
        .skip-link {
            position: absolute;
            top: -100px;
            left: 0;
            background: var(--gold-primary);
            color: black;
            padding: 10px 20px;
            z-index: 9999;
            transition: top 0.2s;
            text-decoration: none;
            font-weight: bold;
            font-family: 'Raleway', sans-serif;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .skip-link:focus {
            top: 0;
        }

        /* --- ACCESSIBILITY FIX --- */
        /* Desktop: Completely hide mobile elements from focus order and DOM */
        @media (min-width: 768px) {
            #mobile-menu {
                display: none !important;
            }
        }

        /* The Psychedelic Background Animation */
        .psych-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            z-index: -1;
            background: 
                radial-gradient(circle at 50% 50%, rgba(0,0,0,0.8), rgba(0,0,0,0.95)),
                conic-gradient(from 0deg, #ff0000, #ff8a00, #ffe500, #008026, #004dff, #760188, #ff0000);
            background-size: 200% 200%;
            filter: blur(40px);
            opacity: 0.4;
            animation: spin-psychedelic 20s linear infinite;
        }

        @keyframes spin-psychedelic {
            0% { transform: scale(1.5) rotate(0deg); }
            50% { transform: scale(1.8) rotate(180deg); }
            100% { transform: scale(1.5) rotate(360deg); }
        }

        /* Gold Metallic Effect Text */
        .text-gold {
            background: linear-gradient(to bottom, var(--gold-light), var(--gold-primary), var(--gold-dark));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-shadow: 0px 2px 4px rgba(0,0,0,0.5);
        }

        .border-gold {
            border-color: var(--gold-primary);
            box-shadow: 0 0 15px rgba(212, 175, 55, 0.3);
        }

        .btn-gold {
            background: linear-gradient(45deg, var(--gold-dark), var(--gold-primary));
            color: black;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            border: none;
            cursor: pointer;
            padding: 0.5rem 1.5rem;
            border-radius: 0.25rem;
        }

        .btn-gold:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 20px var(--gold-primary);
        }
        
        .btn-outline {
            border: 1px solid var(--gold-primary);
            color: var(--gold-primary);
            text-transform: uppercase;
            letter-spacing: 2px;
            transition: all 0.3s ease;
        }
        
        .btn-outline:hover {
            background: rgba(212, 175, 55, 0.1);
            color: #fff;
        }

        /* Nav & Scroll */
        .nav-link { padding: 8px 0; }
        .nav-link:hover { color: var(--gold-primary); }
        
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: var(--void-black); }
        ::-webkit-scrollbar-thumb { background: var(--gold-dark); border-radius: 4px; }

        /* Card Hover Effects */
        .glass-card {
            background: rgba(10, 10, 10, 0.8);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(212, 175, 55, 0.2);
            transition: all 0.4s ease;
        }
        .glass-card:hover {
            border-color: var(--gold-primary);
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        /* Cart Badge */
        .cart-badge {
            position: absolute;
            top: -5px;
            right: -10px;
            background: var(--eye-teal);
            color: black;
            font-size: 0.7rem;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            box-shadow: 0 0 5px var(--eye-teal);
        }

        /* Custom Dropdown Visibility for Keyboard */
        .dropdown-active {
            opacity: 1 !important;
            visibility: visible !important;
            transform: translateY(0) !important;
        }
    </style>
</head>
<body>
    <!-- Skip Link: Ensures keyboard users can jump to the main content immediately -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <!-- Background -->
    <div class="psych-bg"></div>

    <nav class="fixed w-full z-50 bg-black/90 border-b border-yellow-700/50 backdrop-blur-md">
        <div class="container mx-auto px-6 py-4">
            <div class="flex justify-between items-center">
                <a href="/" class="flex items-center space-x-3 cursor-pointer no-underline">
                    <img src="/images/logo.png" alt="Logo" class="h-10 w-auto">
                    <span class="text-xl font-bold tracking-widest text-gold brand-font hidden sm:block">FUTURE MUSIC COLLECTIVE</span>
                </a>

                <div class="hidden md:flex space-x-6 items-center">
                    <a href="/" class="nav-link text-gray-300 font-semibold tracking-wider uppercase text-sm">Home</a>
                    
                    <!-- Music Dropdown -->
                    <div class="relative group h-full flex items-center">
                        <button 
                            id="music-dropdown-btn"
                            class="nav-link text-gray-300 font-semibold tracking-wider uppercase text-sm flex items-center gap-1 focus:outline-none cursor-pointer focus:text-[#D4AF37]"
                            aria-haspopup="true"
                            aria-expanded="false"
                            onclick="toggleMusicDropdown()"
                            onkeydown="if(event.key === 'Enter') { event.preventDefault(); toggleMusicDropdown(); }"
                        >
                            Music <i class="fas fa-chevron-down text-[10px] ml-1 transition-transform group-hover:rotate-180 text-[#D4AF37]"></i>
                        </button>
                        
                        <!-- Dropdown Content -->
                        <div id="music-dropdown-menu" class="absolute left-0 top-full mt-0 w-48 bg-black/95 backdrop-blur-xl border border-yellow-700/50 rounded-sm shadow-[0_0_15px_rgba(0,0,0,0.8)] opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 transform group-hover:translate-y-0 translate-y-2 overflow-hidden">
                            <a href="/music" class="block px-5 py-3 text-xs font-bold text-gray-300 hover:text-black hover:bg-[#D4AF37] focus:bg-[#D4AF37] focus:text-black uppercase tracking-widest border-b border-white/10 transition-colors">
                                Browse Songs
                            </a>
                            <a href="/rights" class="block px-5 py-3 text-xs font-bold text-gray-300 hover:text-black hover:bg-[#D4AF37] focus:bg-[#D4AF37] focus:text-black uppercase tracking-widest border-b border-white/10 transition-colors">
                                Rights
                            </a>
                            <a href="/merch" class="block px-5 py-3 text-xs font-bold text-gray-300 hover:text-black hover:bg-[#D4AF37] focus:bg-[#D4AF37] focus:text-black uppercase tracking-widest transition-colors">
                                Merch
                            </a>
                        </div>
                    </div>

                    <a href="/projects" class="nav-link text-gray-300 font-semibold tracking-wider uppercase text-sm">Projects</a>
                    <a href="/advocacy" class="nav-link text-gray-300 font-semibold tracking-wider uppercase text-sm">Advocacy</a>
                    <a href="/about" class="nav-link text-gray-300 font-semibold tracking-wider uppercase text-sm">About</a>
                    
                    <!-- Cart Icon with aria-label for discernible name -->
                    <a href="/cart" class="relative text-[#D4AF37] hover:text-white transition-colors ml-4" aria-label="View Shopping Cart">
                        <i class="fas fa-shopping-cart text-xl"></i>
                        <span id="cart-count" class="cart-badge hidden">0</span>
                    </a>

                    <a href="/account" class="ml-6 flex items-center gap-2 text-gray-400 hover:text-[#D4AF37] transition-colors group">
                        <div class="w-8 h-8 rounded-full border border-gray-600 group-hover:border-[#D4AF37] flex items-center justify-center transition-all">
                            <i class="fas fa-user text-xs"></i>
                        </div>
                        <span class="text-xs font-bold uppercase tracking-widest hidden lg:block">My Account</span>
                    </a>

                    <a href="/contact" class="ml-4 px-4 py-2 bg-[#D4AF37] text-black border border-[#D4AF37] hover:bg-transparent hover:text-[#D4AF37] transition-all text-sm uppercase font-bold rounded-sm shadow-[0_0_10px_rgba(212,175,55,0.2)]">Contact</a>
                </div>

                <button 
                    class="md:hidden text-[#D4AF37]" 
                    onclick="toggleMobileMenu()"
                    aria-label="Toggle Navigation"
                    aria-expanded="false"
                    aria-controls="mobile-menu"
                >
                    <i class="fas fa-bars text-2xl"></i>
                </button>
            </div>
        </div>
        
        <!-- Mobile Menu with aria-hidden logic -->
        <div id="mobile-menu" class="hidden md:hidden bg-black border-t border-yellow-700/30" aria-hidden="true">
            <div class="flex flex-col p-4 space-y-4 text-center">
                <a href="/" class="text-gray-300 hover:text-[#D4AF37]">HOME</a>
                <a href="/music" class="text-gray-300 hover:text-[#D4AF37]">MUSIC</a>
                <a href="/rights" class="text-gray-300 hover:text-[#D4AF37]">RIGHTS</a>
                <a href="/merch" class="text-gray-300 hover:text-[#D4AF37]">MERCH</a>
                <a href="/projects" class="text-gray-300 hover:text-[#D4AF37]">PROJECTS</a>
                <a href="/about" class="text-gray-300 hover:text-[#D4AF37]">ABOUT</a>
                <a href="/advocacy" class="text-gray-300 hover:text-[#D4AF37]">ADVOCACY</a>
                <a href="/cart" class="text-[#D4AF37]">CART</a>
                <a href="/contact" class="text-[#D4AF37]">CONTACT</a>
            </div>
        </div>
    </nav>
    
    <!-- Ensure your main content has id="main-content" for the skip link -->
    <main id="main-content" class="flex-grow pt-24 px-4 sm:px-6 relative z-10">

    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            const btn = document.querySelector('button[aria-controls="mobile-menu"]');
            
            if (!menu) return;

            const isHidden = menu.classList.toggle('hidden');
            
            // Toggle accessibility attributes
            menu.setAttribute('aria-hidden', isHidden);
            if (btn) {
                btn.setAttribute('aria-expanded', !isHidden);
            }
        }

        function toggleMusicDropdown() {
            const btn = document.getElementById('music-dropdown-btn');
            const menu = document.getElementById('music-dropdown-menu');
            const isActive = menu.classList.toggle('dropdown-active');
            btn.setAttribute('aria-expanded', isActive);
        }

        // Close dropdown when clicking outside or losing focus
        window.addEventListener('click', (e) => {
            const btn = document.getElementById('music-dropdown-btn');
            const menu = document.getElementById('music-dropdown-menu');
            if (!btn.contains(e.target) && !menu.contains(e.target)) {
                menu.classList.remove('dropdown-active');
                btn.setAttribute('aria-expanded', 'false');
            }
        });
    </script>